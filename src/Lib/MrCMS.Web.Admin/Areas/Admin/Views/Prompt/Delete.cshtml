@model MrCMS.Web.Admin.Models.Prompts.UpdatePromptModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
}

@using (Html.BeginForm("Delete", "Prompt", new { Model.Id }, FormMethod.Post))
{
    <fieldset>
        <legend>
            @await Html.Resource("Admin Prompt Template Delete", "Delete Prompt Template")
            <span class="btn-group d-inline pull-right">
                <button type="submit" class="btn-danger btn">@await Html.Resource("Delete")</button>
            </span>
        </legend>
        @Html.InfoBlock(await Html.PlainResource("Heads up") + "!", await Html.PlainResource("Admin Delete Info Warning", "Deleting this cannot be undone."), AlertType.danger)
    </fieldset>
}