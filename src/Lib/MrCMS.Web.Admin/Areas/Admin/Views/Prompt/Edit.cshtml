@using MrCMS.AI
@using MrCMS.AI.Models
@model MrCMS.Web.Admin.Models.Prompts.UpdatePromptModel
@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPopup.cshtml";
    var typeOptions = EnumHelper<PromptType>.GetOptions();
}
<form method="post" asp-controller="Prompt" asp-action="Edit">
    @Html.HiddenFor(f=>f.Id)
    <fieldset>
        <legend>
            Edit Prompt Template
            <span class="btn-group d-inline pull-right">
                <button type="submit" class="btn-primary btn">
                    Save
                </button>
                <a asp-action="Index" asp-controller="Prompt" class="btn btn-default">Back</a>
            </span>
        </legend>
        <div class="form-group">
            <label asp-for="Name"></label>
            <input asp-for="Name" class="form-control"/>
            <span asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            @Html.LabelFor(x => x.Type)
            @Html.DropDownListFor(x => x.Type, typeOptions, new { @class = "form-control" })
            @Html.ValidationMessageFor(x => x.Type)
        </div>
        
        <div class="form-group mt-3">
            @Html.LabelFor(m => m.Template)
            @Html.TextAreaFor(m => m.Template, new { @class = "form-control code-enabled", rows = 5 })
        </div>
        
    </fieldset>
</form>